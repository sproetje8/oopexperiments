{
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:recommended",
		"airbnb-base"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"rules": {
		"semi": ["error", "always"],
		"quotes": ["error", "single"],
		"linebreak-style": "off",
		"indent": ["error", "tab"],
		"no-tabs": "off",
		"overrides": {
			"files": ["*.test.js"],
			"rules": {
				"no-undef": "off"
			}
		}
	}
}